<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#30000000"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <com.makeramen.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView1"
            app:riv_corner_radius="10dp"
            app:riv_border_width="0dp"
            app:riv_border_color="#333333"
            app:riv_mutate_background="false"
            app:riv_tile_mode="repeat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_alignParentEnd="false"
            android:scaleType="centerCrop"
            android:src="@drawable/photo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Juscelino"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_toEndOf="@+id/imageView1"
            android:layout_marginLeft="10dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mai porque diabo eu to aqui nesse app ja morri fi tá de zuera co a minha cara? "
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:paddingTop="20dp"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="07/08/2014 às 16:45"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="8dp"
            android:alpha="0.5" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#30000000"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <com.makeramen.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView1"
            app:riv_corner_radius="10dp"
            app:riv_border_width="0dp"
            app:riv_border_color="#333333"
            app:riv_mutate_background="false"
            app:riv_tile_mode="repeat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_alignParentEnd="false"
            android:scaleType="centerCrop"
            android:src="@drawable/photo2" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Getulio"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_toEndOf="@+id/imageView1"
            android:layout_marginLeft="10dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bacon ipsum dolor amet rump bresaola tenderloin venison pork chop pig prosciutto meatloaf ball tip alcatra boudin pancetta short ribs pork. Beef ribs short loin turducken cow hamburger kevin turkey tenderloin short ribs. Biltong sirloin beef ribs, bacon pork loin flank tail cupim alcatra picanha. Shankle tongue alcatra kielbasa, frankfurter t-bone cupim short ribs corned beef tri-tip. Picanha frankfurter boudin, tenderloin fatback jerky salami turducken short loin prosciutto alcatra pig doner. Jowl cupim andouille ham hock pancetta pork chop landjaeger short ribs chicken."
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:paddingTop="20dp"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="07/08/2014 às 16:45"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="8dp"
            android:alpha="0.5" />

    </RelativeLayout>





</LinearLayout>